<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>
    <script src="/js/resultsController.js"></script>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController">

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-3 col-md-2 sidebar-inverse">
            <ul class="nav">
              <li><a class="header" href="#/overall">Seasons</a></li>
              <% for season in @seasons %>
                <li class="{{isActiveYear(<%= season %>)}}"><a href="#/results/<%= season %>"><%= season %></a></li>
              <% end %>
            </ul>
          </div>

          <div class="col-sm-9 col-md-10">
            <div ng-view>
          </div>
        </div>
      </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
