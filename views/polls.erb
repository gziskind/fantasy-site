<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>
    <script src="/js/pollsController.js"></script>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController" ng-cloak>

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-3 col-md-2 sidebar-inverse">
            <ul class="nav">
              <li>
                <a class="header">
                <% if @poll_type == 'current' %>
                  Current Polls
                <% else %>
                  Poll Results
                <% end%>
                </a>
              </li>
              <% for poll in @polls %>
                <li class="{{isActivePoll('<%= poll[:id] %>')}}"><a href="#/polls/<%= poll[:id] %>"><%= poll[:name]%></a></li>
              <% end %>
            </ul>
          </div>

          <div class="col-sm-9 col-md-10">
            <div ng-view>
          </div>
        </div>
      </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
