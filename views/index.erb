<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController" ng-cloak>

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <div class="container-fluid">
        <h1>AEPi Fantasy League</h1>
        <div class="row">
          <div class="col-md-6">
            <h3>Most Championships</h3>
            <% @championships.each {|championship| %>
              <div class="row">
                <div class="col-md-6"><%= championship[0] %></div>
                <div class="col-md-1"><%= championship[1] %></div>
              </div>
            <% } %>
          </div>
          <div class="col-md-6">
            <h3>Most Last Place Finishes</h3>
            <% @last_places.each {|last_place| %>
              <div class="row">
                <div class="col-md-6"><%= last_place[0] %></div>
                <div class="col-md-1"><%= last_place[1] %></div>
              </div>
            <% } %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
              <h3>Best Team Names</h3>
              <% index = 0; while index < 5 && index < @team_names.length %>
              <div class="row">
                <div class="col-md-5"><%= @team_names.reverse[index][:name] %></div>
                <div class="col-md-3"><%= @team_names.reverse[index][:owner] %></div>
                <div class="col-md-1"><%= @team_names.reverse[index][:rating] %></div>
              </div>
              <% index+=1; end %>
            </div>
            <div class="col-md-6">
              <h3>Worst Team Names</h3>
              <% index = 0; while index < 5 && index < @team_names.length %>
              <div class="row">
                <div class="col-md-5"><%= @team_names[index][:name] %></div>
                <div class="col-md-3"><%= @team_names[index][:owner] %></div>
                <div class="col-md-1"><%= @team_names[index][:rating] %></div>
              </div>
              <% index+=1; end %>
            </div>
          </div>
        </div>  
      </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
