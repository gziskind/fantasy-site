<table class="table table-condensed table-hover">
	<thead>
		<tr>
			<th>Place</th>
			<th>Team Name</th>
			<th>Owner</th>
			<th>Wins</th>
			<th>Losses</th>
			<th>Win Percentage</th>
			<th>Points</th>
		</tr>
	</thead>
	<tbody>
		<% results.each_with_index {|(name, result), index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= result[:team_name] %></td>
			<td><%= name %></td>
			<td>{{standing.wins}}</td>
			<td>{{standing.losses}}</td>
			<td>{{standing.winPercentage | number:3}}</td>
			<td><%= result[:points] %></td>
		</tr>
		<% } %>
	</tbody>
</table>