<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>

    <script src="/js/adminLogController.js"></script>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController" ng-cloak>

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <div class="container-fluid" ng-controller="AdminLogController">
        <div class="row">
          <div class="col-sm-3 col-md-2 sidebar-inverse">
            <ul class="nav">
              <% @logger_types.each { |logger_type| %>
              <li ng-class="isLoggerSelected('<%= logger_type %>')"><a ng-click="selectLogger('<%= logger_type %>')"><%= logger_type %></a></li>
              <% } %>
            </ul>
          </div>

          <div class="col-sm-9 col-md-10">
            <div class="row levels-row">
              <div class="col-sm-1">
                Levels:
              </div>
              <% @log_levels.each_with_index { |level,index| %>
              <div class="col-sm-2 form-check">
                <label>
                  <input type="checkbox" ng-model="logLevels.<%= level %>" ng-init="logLevels.<%= level %>=false"> <%= level %>
                </label>
              </div>
              <% } %>
              <button type="submit" style="float:right;" class="btn btn-danger" ng-click="clearLog()">Clear Logs</button>
              <button type="submit" style="float:right;" class="btn btn-primary" ng-click="loadMoreLogs()">Load More</button>
            </div>
            <div class="row terminal">
              <div ng-repeat="message in logMessages | orderBy:'time'">{{message.time | date:"yyyy/MM/dd HH:mm:ss"}} - [{{message.level}}] {{message.message}}</div>
            </div>
          </div>
        </div>
      </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
