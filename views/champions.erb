<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController" ng-cloak>

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <div class="container-fluid">
		<h1>Hall of Champions - <%= @sport.capitalize %></h1>
		<br/>
		<div class="col-md-offset-1 col-md-10 col-xs-offset-0 col-xs-12 table-responsive">
			<table class="table table-condensed table-hover">
				<thead>
					<tr>
						<th>Year</th>
						<th>Team Name</th>
						<th>Owner</th>
						<th>Record</th>
						<th>Result</th>
						<th>Runner Up</th>
					</tr>
				</thead>
				<tbody>
					<% @champions.each {|champion| %>
						<tr>
							<td><%= champion[:year] %></td>
							<td><%= champion[:team_name] %></td>
							<td><%= champion[:winner] %></td>
							<td><%= champion[:record] %></td>
							<td><%= champion[:result] %></td>
							<td><%= champion[:runner_up] %></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
