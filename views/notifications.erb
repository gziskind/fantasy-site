<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head %>
    <script src="/js/notificationsController.js"></script>
  </head>

  <body ng-app="aepi-fantasy" ng-controller="HomeController" ng-cloak>

    <div class="container">
      <!-- Static navbar -->
      <%= erb :header %>
      
      <h1>Notifications - <%= @user.username %></h1>
      <br/>

      <div class="container-fluid">
      	<form class="form-horizontal" role="form" ng-controller="NotificationController">
		  <div class="form-group">
		  	<label class="col-sm-2 control-label">Homeruns</label>
		  	<label class="checkbox-inline">
		  		<input type="checkbox" id="homeruns_team" value="homeruns_team" ng-model="notifications.homeruns_team"> My Team
		  	</label>
		  	<label class="checkbox-inline">
		  		<input type="checkbox" id="homeruns_opponent" value="homeruns_opponent" ng-model="notifications.homeruns_opponent"> Opponent
		  	</label>
		  </div>
		  <div class="form-group">
		  	<label class="col-sm-2 control-label">Steals</label>
		  	<label class="checkbox-inline">
		  		<input type="checkbox" id="steals_team" value="steals_team" ng-model="notifications.steals_team"> My Team
		  	</label>
		  	<label class="checkbox-inline">
		  		<input type="checkbox" id="steals_opponent" value="steals_opponent" ng-model="notifications.steals_opponent"> Opponent
		  	</label>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-1">
		      <button type="submit" class="btn btn-default" ng-click="saveNotificationOptions()">Save</button>
		    </div>
		    <div class="col-sm-4">
				<span class="password-message">{{notificationMessage}}</span>
			</div>
		  </div>
		</form>
      </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/lib/bootstrap.min.js"></script>
  </body>
</html>
